<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theme_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="2dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/change_theme_view_group1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/change_theme_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:text="文字1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_theme_view_group2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/change_theme_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:text="文字2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_theme_view_group3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/change_theme_view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:text="文字3"/>
        </RelativeLayout>
    </LinearLayout>

    <Switch
        android:id="@+id/theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>